{% extends 'admin/base.html.twig' %}

{% block title %}Détails utilisateur{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between">
			<h6 class="m-0 font-weight-bold text-primary">Détails utilisateur</h6>
            <a href="{{ path('user_index') }}" class=" ml-auto btn btn-info"><i class="fa fa-arrow-left"></i></a>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning ml-1"><i class="fa fa-edit"></i></a>
            {{ include('admin/user/_delete_form.html.twig') }}
		</div>
		<div class="card-body">
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Société</th>
                <td>{{ user.company }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                <ul>
                {% for role in user.roles %}
                    <li>{{ role == 'ROLE_ADMIN' ? "Administrateur": role == 'ROLE_BUSINESS' ? "Partenaire": role == "ROLE_USER"  ?"Utilisateur" }}</li>
                {% endfor %}
                </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>
</div>
{% endblock %}
