<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Inscription - Organisateurs</title>
		<link rel="stylesheet" href="{{ asset('vendors/bootstrap/bootstrap.min.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/fontawesome/css/all.min.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/themify-icons/themify-icons.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/linericon/style.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/owl-carousel/owl.theme.default.min.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/owl-carousel/owl.carousel.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">
		<link rel="stylesheet" href="{{ asset('vendors/flat-icon/font/flaticon.css') }}">

		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		<link rel="stylesheet" href="{{ asset('css/middle-form.css') }}">
	</head>

	<body class="banner-bg">
		<div class="container"> 
			<div class="middle-form">
				<div class="middle-form-container">
					{% for flashError in app.flashes('verify_email_error') %}
						<div class="alert alert-danger" role="alert">{{ flashError }}</div>
					{% endfor %}

					{{ form_start(registrationForm, {attr: {'class':'p-3 row'}}) }}
					<div class="col-12 text-center">
						<h1>Inscription</h1>
					</div>
					<div class="col-6">
						<div class="form-group">
							{{ form_row(registrationForm.lastName, {label: 'Nom de famille'}) }}
						</div>
					</div>
					<div class="col-6">
						<div class="form-group">
							{{ form_row(registrationForm.firstName, {label: 'Prénom'}) }}
						</div>
					</div>

					<div class="col-12">
						<div class="form-group">
							{{ form_row(registrationForm.company, {label: 'Nom de société'}) }}
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">

							{{ form_label(registrationForm.email) }}
							<div class="text-danger">
								{{ form_errors(registrationForm.email) }}
							</div>
							{{ form_widget(registrationForm.email) }}
						</div>
						<div class="form-group">
							{{ form_label(registrationForm.plainPassword.first) }}
							<div class="text-danger">
								{{ form_errors(registrationForm.plainPassword.first) }}
							</div>
							{{ form_widget(registrationForm.plainPassword.first) }}
						</div>
						<div class="form-group">
							{{ form_label(registrationForm.plainPassword.second) }}
							<div class="text-danger">
								{{ form_errors(registrationForm.plainPassword.second) }}
							</div>
							{{ form_widget(registrationForm.plainPassword.second) }}
						</div>
						<div class="form-group text-center d-flex justify-content-center  flex-column">
							<button type="submit" class="btn btn-success">Créer mon compte</button>
							<a href="{{ path('home') }}" class="btn btn-link">Retour à l'accueil</a>
							<a href="{{ path('app_login') }}" class="btn btn-link">J'ai déjà un compte</a>
						</div>
					</div>

					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</body>
</html>
